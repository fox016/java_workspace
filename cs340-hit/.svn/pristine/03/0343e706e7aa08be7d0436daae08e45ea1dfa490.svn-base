	@Override
	public void update(Observable o, Object arg)
	{
		Notification n = (Notification)arg;
		
		switch(n.getObjectType())
		{
			case STORAGE_UNIT:
				switch(n.getOperationType())
				{
					case CREATE:
						addStorageUnitUpdate((StorageUnit)n.getObject());
						break;
				}
				break;
			case PRODUCT_CONTAINER:
				switch(n.getOperationType())
				{
					case CREATE:
						addProductGroupUpdate((ProductGroup)n.getObject());
						break;
					case UPDATE:
						updateProductGroupUpdate((ProductGroup)n.getObject());
						break;
				}
				break;
		}
	}
	
	private void addStorageUnitUpdate(StorageUnit newUnit)
	{
		// Translate new Storage Unit
		ProductContainerData newUnitData =
				Translator.instance().getDataFromProductContainer(newUnit);
		
		// Modify the tree
		root.addChild(newUnitData);
		
		// Set the tree
		this.getView().setProductContainers(root);
		
		// Select the new SU
		this.getView().selectProductContainer(newUnitData);
	}
	
	private void addProductGroupUpdate(ProductGroup newGroup)
	{	
		// Translate new PC and parent into Data
		ProductContainerData newUnitData =
				Translator.instance().getDataFromProductContainer(newGroup);
		ProductContainerData parentData = getView().getSelectedProductContainer();
		
		// Modify the tree
		parentData.addChild(newUnitData);
		
		// Set the tree
		getView().setProductContainers(root);
		
		// Select the new PG
		getView().selectProductContainer(newUnitData);
	}
	
	private void updateProductGroupUpdate(ProductGroup updatedGroup)
	{
		// Modify the tree and set the new tag
		ProductContainerData updatedData = getView().getSelectedProductContainer();
		updatedData.setName(updatedGroup.getName());
		updatedData.setTag(updatedGroup);
		
		// Set the tree
		getView().setProductContainers(root);
		
		// Select the modified PG
		getView().selectProductContainer(updatedData);
	}
